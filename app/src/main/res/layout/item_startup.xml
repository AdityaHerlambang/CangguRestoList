<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/item_startup_container"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_restaurant_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/item_restaurant_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/item_startup_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/airbnb"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/item_startup_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Airbnb"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/item_startup_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="eCommerce/Marketplace	"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="16sp"
                        android:textStyle="normal"/>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/item_startup_founder_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            tools:src="@android:color/darker_gray"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/item_startup_founder_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="14sp"
                                android:textColor="@color/colorSecondaryText"
                                android:text="Founder"/>
                            <TextView
                                android:id="@+id/item_startup_founder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimaryText"
                                tools:text="Aditya Herlambang"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/item_startup_rate"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="8dp"
                            android:textSize="12sp"
                            fancy:fb_defaultColor="@color/colorSecondary"
                            fancy:fb_fontIconResource="\uf005"
                            fancy:fb_iconPosition="left"
                            fancy:fb_radius="30dp"
                            fancy:fb_text="Rate"
                            fancy:fb_textColor="#FFFFFF" />

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/item_startup_share"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="16dp"
                            android:textSize="12sp"
                            fancy:fb_defaultColor="@color/colorAccent"
                            fancy:fb_fontIconResource="\uf1e0"
                            fancy:fb_iconPosition="left"
                            fancy:fb_radius="30dp"
                            fancy:fb_text="Share"
                            fancy:fb_textColor="#FFFFFF" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>

</LinearLayout>